{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-cron --watch src/bootstrap.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-cron src/bootstrap.ts",
    "check": "deno check src/*.ts && deno task test",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --unstable-cron",
    "analyze": "deno task check && deno task lint",
    "compile": "deno eval \"Deno.writeTextFileSync('build-timestamp.txt', new Date().toISOString())\" && deno check src/**/*.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "mqtt": "npm:mqtt@^5.10.1",
    "prom-client": "npm:prom-client@^15.1.0",
    "@std/assert": "jsr:@std/assert@^0.225.0",
    "@js-temporal/polyfill": "npm:@js-temporal/polyfill@^0.5.1",
    "loglayer": "npm:loglayer@latest",
    "@loglayer/transport-logflare": "npm:@loglayer/transport-logflare@^1.0.0",
    "serialize-error": "npm:serialize-error@^9.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
